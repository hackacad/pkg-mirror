#pkg-mirror configuration

#FreeBSD major release e. g. 13
REL=13

#amd64, arm64, etc.
ARCH=amd64

#latest or quarterly
CYCLE=latest

#package site
URL=https://pkg.freebsd.org/FreeBSD:${REL}:${ARCH}/${CYCLE}

#base directory
BASE_DIR="/usr/local/pkg-mirror"

#target directory for mirror
DIR="${BASE_DIR}/${REL}/${ARCH}/${CYCLE}"

# Define the log file
LOG_FILE="/var/log/pkg-mirror.log"
